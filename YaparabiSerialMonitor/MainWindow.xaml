<Window x:Class="YaparabiSerialMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:YaparabiSerialMonitor"
        Title="Yaparabi Serial Monitor" 
        Height="700" 
        Width="1000"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen" Icon="/yaparabiserialportmonitoricon.ico">
    <Window.Resources>
        



        <!-- Button Stili -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Stili -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- TextBox Stili -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- CheckBox Stili -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Add an icon image -->
        <Image Grid.Row="0"
           Width="24" 
           Height="24" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Source="/yaparabiserialportmonitoricon.png"
           Margin="0,0,0,10"/>
        <!-- Üst Kontrol Paneli -->
        <Border Grid.Row="0" 
        Background="#252526" 
        CornerRadius="6" 
        Padding="15"
        Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- For icon -->
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Image Grid.Column="0"
       Width="36" 
       Height="36" 
       Margin="0,0,15,0"
       VerticalAlignment="Center"
               Source="/yaparabiserialportmonitoricon.png"/>

                <StackPanel Grid.Column="1">
                    <ComboBox x:Name="portComboBox" 
                      Width="200"
                      SelectionChanged="PortComboBox_SelectionChanged"/>
                    <TextBlock x:Name="portDescriptionText" 
                      Foreground="#808080"
                      Margin="5,2,0,0"
                      FontSize="11"
                      TextTrimming="CharacterEllipsis"
                      MaxWidth="200"/>
                </StackPanel>

                <ComboBox x:Name="baudComboBox" 
                  Grid.Column="3"
                  Width="120"
                  VerticalAlignment="Center">
                    <ComboBoxItem Content="300"/>
                    <ComboBoxItem Content="1200"/>
                    <ComboBoxItem Content="2400"/>
                    <ComboBoxItem Content="4800"/>
                    <ComboBoxItem Content="9600"/>
                    <ComboBoxItem Content="19200"/>
                    <ComboBoxItem Content="38400"/>
                    <ComboBoxItem Content="57600"/>
                    <ComboBoxItem Content="115200"/>
                </ComboBox>

                <Button x:Name="connectButton" 
                Grid.Column="5"
                Content="Connect" 
                Width="120"
                Click="ConnectButton_Click"/>

                <Button x:Name="resetButton" 
                Grid.Column="7"
                Content="Reset" 
                Width="120"
                Click="ResetButton_Click"/>

                <Button x:Name="clearButton" 
                Grid.Column="9"
                Content="Clear" 
                Width="120"
                Click="ClearButton_Click"/>

                <CheckBox x:Name="autoScrollCheckBox" 
          Grid.Column="11"
          Content="Autoscroll"
          IsChecked="True"
          Checked="AutoScrollCheckBox_Checked"/>
            </Grid>
        </Border>

        <!-- Veri Görüntüleme Alanı -->
        <RichTextBox x:Name="dataTextBox" 
             Grid.Row="1" 
             Margin="0,0,0,15"
             IsReadOnly="True"
             VerticalScrollBarVisibility="Visible"
             HorizontalScrollBarVisibility="Auto"
             FontFamily="Consolas"
             FontSize="13"
             Background="#252526"
             Foreground="#D4D4D4"
             BorderThickness="1"
             BorderBrush="#3E3E42"
             Padding="10"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             MinHeight="200">
            <FlowDocument>
                <Paragraph Name="terminalParagraph"/>
            </FlowDocument>
        </RichTextBox>

        <!-- Alt Veri Gönderme Alanı -->
        <Border Grid.Row="2" 
                Background="#252526" 
                CornerRadius="6" 
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="sendTextBox"
                        Grid.Column="0"
                        KeyDown="SendTextBox_KeyDown"/>

                <Button x:Name="sendButton"
                        Grid.Column="2"
                        Content="Gönder"
                        Width="120"
                        Click="SendButton_Click"/>
            </Grid>
        </Border>

        <!-- Durum Çubuğu -->
        <Border Grid.Row="3" 
                Background="#252526" 
                Height="30" 
                CornerRadius="6">
            <DockPanel LastChildFill="False" Margin="15,0">
                <Ellipse x:Name="connectionIndicator"
                        Width="10" 
                        Height="10" 
                        Fill="Red"
                        DockPanel.Dock="Left"/>
                <TextBlock x:Name="statusText"
                          Text="Bağlı Değil"
                          Foreground="#D4D4D4"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"
                          DockPanel.Dock="Left"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>