<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>yaparabiserialportmonitoricon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="yaparabiserialportmonitoricon.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="yaparabiserialportmonitoricon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Ports" Version="8.0.0" />
    <PackageReference Include="System.Management" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="yaparabiserialportmonitoricon.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
